{
  "manifest_version": 2,
  "name": "GFG To GitHub",
  "version": "1.0",
  "description": "Push GFG C++ submissions to GitHub manually.",
  "permissions": ["activeTab", "tabs", "https://practice.geeksforgeeks.org/"],
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_title": "GFG To GitHub Popup",
    "default_icon": "/assets/logos.png"
  },
  "icons": {
    "16": "assets/logos.png",
    "48": "assets/logos.png",
    "128": "assets/logos.png"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.geeksforgeeks.org/*"],
      "js": ["src/content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "email@gmail.com",
      "strict_min_version": "102.0"
    }
  }
}
